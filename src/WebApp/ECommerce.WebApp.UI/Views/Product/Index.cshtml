@model IEnumerable<ProductViewModel> 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper-product">
    <div class="routing">
        <a>HOME / PRODUCTS</a>
    </div>
    <div class="routing-title">
        PRODUCTS
    </div>
    <div class="row" style="margin: auto">
        <div class="col-md-3 no-padding sidebar">
            <div class="sidebar">
                <p class="filter-title" style="border-bottom: 1px dotted black;">REFINE BY</p>
                <p class="filter-explanation"> No filters applied</p>
            </div>
            <div class="price">
            </div>
        </div>
        <div class="col-md-9 sidebar no-padding">
            <div class="product-list">
                @foreach (var product in Model)
                {
                    <div class="card product">
                        <div class="card-img">
                            <img src="/images/@product.Image"/>
                        </div>
                        <div class="card-body">
                            <div class="product-title">
                                @product.Name
                            </div>
                            <div class="product-price">
                                $@product.Price
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>